<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Alumni-Student Platform</title>
    <link rel="stylesheet" href="edit-profile.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <h2 class="logo">Logo</h2>
        <nav class="navigation">
            <a href="/home-login">Home</a>
            <a href="/jobs">Jobs</a>
            <a href="/mentorship">Mentorship</a>
            <a href="/about">About</a>
            <div class="user-icon" onclick="toggleDropdown()">
                <span class = "icon">
                    <ion-icon name="person-circle-outline"></ion-icon>
                </span>
                <div id="dropdownMenu" class="dropdown" style="display: none;">
                    <div onclick="logout()">Log Out</div>
                </div>
            </div>
        </nav>
    </header>

    <div class="wrapper">
        <div class="form-box edit-profile">
            <h2>Edit Profile</h2>
            <form id="editProfileForm" action="/edit-profile" method="post">

                <!-- Editable Name Field -->
                <div class="input-box">
                    <input type="text" name="newName" id="newName" value="{{user.name}}" required>
                    <label>Update Name</label>
                </div>

                <!-- Current Password Field for Verification -->
                <div class="input-box">
                    <input type="password" name="password" id="password" required>
                    <label>Enter Your Password</label>
                </div>

                <!-- Error Message Display -->
                {{#if errorMessage}}
                <div class="error-message">{{errorMessage}}</div>
                {{/if}}

                <button type="submit" class="btn">Save Changes</button>
            </form>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
        // Logout function
        function logout() {
            window.location.href = '/logout';
        }

        // Toggle Dropdown Menu
        function toggleDropdown() {
            const dropdown = document.getElementById("dropdownMenu");
            dropdown.style.display = dropdown.style.display === "none" ? "block" : "none";
        }

        // Close dropdown if clicked outside
        document.addEventListener('click', function(event) {
            const isClickInside = document.querySelector('.user-icon').contains(event.target);
            if (!isClickInside) {
                const dropdown = document.getElementById("dropdownMenu");
                if (dropdown) {
                    dropdown.style.display = "none";
                }
            }
        });
    </script>
</body>
</html>
